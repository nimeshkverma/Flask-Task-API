        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/tasks",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tasks"]
            }
          }
        },
        {
          "name": "Get Task by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/tasks/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tasks", "1"]
            }
          }
        },
        {
          "name": "Create Task",
